@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangeUsername</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        body {
            background-image: url("/images/hex.png");
            background-repeat: repeat;
        }

        #username {
            background-image: url("/images/hex-dark.png");
            background-repeat: repeat;
        }

        h1 {
            color: white;
        }
    </style>
</head>
<body>
    @Html.Raw(ViewBag.Message)
    <div class="container" style="border-left: 1px solid lightgray; border-right: 1px solid lightgray; height: 100%; padding-top: 20px; background: white; padding-top: 0;">
        <div id="username" class="row" style="border-bottom: 1px solid lightgray;">
            <div class="col">
                <h1>Восстановить доступ к учетной записи</h1>
            </div>
        </div>
        <div class="row" style="margin-top: 20px;">
            <div class="col">
                <form asp-controller="Account" asp-action="Restore" method="post">
                    <table>
                        <tr>
                            <td>Имя пользователя:</td>
                            <td><input type="text" name="username"></td>
                        </tr>
                        <tr>
                            <td>Адрес электронной почты:</td>
                            <td><input type="text" name="email"></td>
                        </tr>
                        <tr style="height: 100px;">
                            <td><input type="submit" value="Подтвердить" class="btn btn-success"></td>
                            <td></td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p>Ваш новый пароль: @ViewBag.Password</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a href="/Account/SignIn">Вход в систему</a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a href="/">Главная страница</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>