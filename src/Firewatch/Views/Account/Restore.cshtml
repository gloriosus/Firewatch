@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangeUsername</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/css/bootstrap.min.css">
    <style>
        body {
            background-image: url("/images/hex.png");
            background-repeat: repeat;
        }

        #username {
            background-image: url("/images/hex-dark.png");
            background-repeat: repeat;
        }

        h1 {
            color: white;
        }
    </style>
</head>
<body>
    @Html.Raw(ViewBag.Message)
    <div class="container" style="border-left: 1px solid lightgray; border-right: 1px solid lightgray; height: 100%; padding-top: 20px; background: white; padding-top: 0;">
        <div id="username" class="row" style="border-bottom: 1px solid lightgray;">
            <div class="col">
                <h1>Восстановить доступ к учетной записи</h1>
            </div>
        </div>
        <div class="row" style="margin-top: 20px;">
            <div class="col">
                <form asp-controller="Account" asp-action="Restore" method="post">
                    <table>
                        <tr>
                            <td>Имя пользователя:</td>
                            <td><input type="text" name="username"></td>
                        </tr>
                        <tr>
                            <td>Адрес электронной почты:</td>
                            <td><input type="text" name="email"></td>
                        </tr>
                        <tr style="height: 100px;">
                            <td><input type="submit" value="Подтвердить" class="btn btn-success"></td>
                            <td></td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p>Ваш новый пароль: @ViewBag.Password</p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a href="/Account/SignIn">Вход в систему</a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a href="/">Главная страница</a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/jquery-3.2.1.slim.min.js"></script>
    <script src="~/lib/bootstrap/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>